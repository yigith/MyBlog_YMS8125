@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-8 blog-main">
        <h3 class="pb-4 mb-4 font-italic border-bottom">
            Yazılarım
        </h3>

        @foreach (var post in Model.Posts)
        {
            <div class="blog-post">
                <h2 class="blog-post-title">@post.Title</h2>
                <p class="blog-post-meta">--Tarih--  <a href="#">@post.Author.UserName</a></p>

                @Html.Raw(post.Content)
            </div><!-- /.blog-post -->
        }



        <nav class="blog-pagination">
            <a class="btn btn-outline-primary" href="#">Older</a>
            <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">Newer</a>
        </nav>

    </div><!-- /.blog-main -->

    <aside class="col-md-4 blog-sidebar">
        <div class="p-4 mb-3 bg-light rounded">
            <h4 class="font-italic">About</h4>
            <p class="mb-0">Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
        </div>

        <div class="p-4">
            <h4 class="font-italic">Kategoriler</h4>
            <ol class="list-unstyled mb-0">
                @foreach (var category in Model.Categories)
                {
                    <li><a href="#">@category.CategoryName</a></li>
                }
            </ol>
        </div>

        <div class="p-4">
            <h4 class="font-italic">Elsewhere</h4>
            <ol class="list-unstyled">
                <li><a href="#">GitHub</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">Facebook</a></li>
            </ol>
        </div>
    </aside><!-- /.blog-sidebar -->

</div><!-- /.row -->

@section scripts {
    <script>
    toastr.options.positionClass = "toast-bottom-right";

    @if (Context.Request.Query["login"] == "success")
    {
        <text>toastr.success("Hoşgeldin @User.Identity.Name :)", "Giriş Başarılı");</text>
    }
    else if (Context.Request.Query["logout"] == "success")
    {
        <text>toastr.success("Başarıyla çıkış yapıldı.");</text>
    }
    </script>
}